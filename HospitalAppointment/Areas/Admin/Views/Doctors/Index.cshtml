@model List<HospitalAppointment.Models.Doctor>

@{
    ViewData["Title"] = "All Doctors";
}
<div class="row mb-3 align-items-center">
    <div class="col-md-6">
        <h2 class="display-6">All Doctors</h2>
    </div>
    <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
        <a href="/Admin/Doctors/Create" class="btn btn-success">Create</a>
    </div>
</div>

<table class="table table-bordered table-striped table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Specialization</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doc in Model)
        {
            <tr>
                <td>@doc.Id</td>
                <td>@doc.Name</td>
                <td>@doc.Specialization</td>
                <td>
                    <a href="/Admin/Doctors/Edit/@doc.Id" type="button" class="btn btn-warning">Edit</a>
                    <button class="btn btn-danger" onclick="confirmDelete(@doc.Id)">Delete</button>
                </td>
               
            </tr>
        }
    </tbody>
</table>
<script>
    function confirmDelete(id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = `/Admin/Doctors/Delete/${id}`;
            }
        });
    }
</script>

